---
import StarlightPage from "@astrojs/starlight/components/StarlightPage.astro";

import { Card, Code, TabItem, Tabs } from "@astrojs/starlight/components";
import NpmCommand from "../components/NpmCommand.astro";
import CallToAction from "../components/override/CallToAction.astro";
import Accordion from "./_examples/Accordion.svelte";

const componentCode = `
<script lang="ts">
    import { Button } from "@niklasburggraaff/svelte-runia";
</script>

<Button>Click me</Button>
`;
const componentMarks = [
    `import { Button } from "@niklasburggraaff/svelte-runia";`,
    `<Button>Click me</Button>`
];

const componentStyledCode = `
<script lang="ts">
    import { Button } from "@niklasburggraaff/svelte-runia";
</script>

<Button class="bg-blue-500">Click me</Button>
`;
const componentStyledMarks = [`class="bg-blue-500"`];
---

<StarlightPage
    frontmatter={{
        title: "Your <span class='runic-gradient'>Mystical</span> UI Library",
        description: "Get started building your docs site with Starlight.",
        template: "splash",
        hero: {
            tagline:
                "Next-generation Svelte components. Accessible, Style-free, and <span class='runic-gradient'>Runic</span>!",
            actions: [
                {
                    text: "Introduction",
                    link: "/guides/introduction/",
                    icon: "right-arrow",
                    variant: "primary"
                },
                {
                    text: "Component docs",
                    link: "/components/overview",
                    icon: "seti:html",
                    variant: "secondary"
                }
            ]
        }
    }}
>
    <div class="not-content">
        <div class="flex gap-4 overflow-x-auto">
            <Card title="Accordion">
                <a
                    href="/components/accordion"
                    class="text-orange-200 hover:text-[var(--sl-color-white)]"
                >
                    View docs
                </a>
                <div class="h-52 w-80 overflow-y-auto overflow-x-clip">
                    <Accordion client:load />
                </div>
            </Card>
            <Card title="Dialog">
                <div class="h-52 w-80 overflow-y-auto overflow-x-clip">
                    <Tabs class="tabs">
                        <TabItem label="World" icon="laptop"> Hello </TabItem>
                        <TabItem label="Item" icon="error"> Goodbye </TabItem>
                    </Tabs>
                </div>
            </Card>
            <Card title="Dropdown Menu">
                <div class="h-52 w-80 overflow-y-auto overflow-x-clip">
                    <Tabs class="tabs">
                        <TabItem label="World" icon="laptop"> Hello </TabItem>
                        <TabItem label="Item" icon="error"> Goodbye </TabItem>
                    </Tabs>
                </div>
            </Card>
            <Card title="Popover">
                <div class="h-52 w-80 overflow-y-auto overflow-x-clip">
                    <Tabs class="tabs">
                        <TabItem label="World" icon="laptop"> Hello </TabItem>
                        <TabItem label="Item" icon="error"> Goodbye </TabItem>
                    </Tabs>
                </div>
            </Card>
            <Card title="Slider">
                <div class="h-52 w-80 overflow-y-auto overflow-x-clip">
                    <Tabs class="tabs">
                        <TabItem label="World" icon="laptop"> Hello </TabItem>
                        <TabItem label="Item" icon="error"> Goodbye </TabItem>
                    </Tabs>
                </div>
            </Card>
            <Card title="Tabs">
                <div class="h-52 w-80 overflow-y-auto overflow-x-clip">
                    <Tabs class="tabs">
                        <TabItem label="World" icon="laptop"> Hello </TabItem>
                        <TabItem label="Item" icon="error"> Goodbye </TabItem>
                    </Tabs>
                </div>
            </Card>
            <Card title="Radio Group">
                <div class="h-52 w-80 overflow-y-auto overflow-x-clip">
                    <Tabs class="tabs">
                        <TabItem label="World" icon="laptop"> Hello </TabItem>
                        <TabItem label="Item" icon="error"> Goodbye </TabItem>
                    </Tabs>
                </div>
            </Card>
            <Card title="Toggle Group">
                <div class="h-52 w-80 overflow-y-auto overflow-x-clip">
                    <Tabs class="tabs">
                        <TabItem label="World" icon="laptop"> Hello </TabItem>
                        <TabItem label="Item" icon="error"> Goodbye </TabItem>
                    </Tabs>
                </div>
            </Card>
            <Card title="Switch">
                <div class="h-52 w-80 overflow-y-auto overflow-x-clip">
                    <Tabs class="tabs">
                        <TabItem label="World" icon="laptop"> Hello </TabItem>
                        <TabItem label="Item" icon="error"> Goodbye </TabItem>
                    </Tabs>
                </div>
            </Card>
            <Card title="and many more...">
                <div
                    class="flex h-52 w-80 flex-col items-center justify-center overflow-y-auto overflow-x-clip"
                >
                    <div>
                        <div class="m-auto">See the component docs for more examples</div>
                        <div class="pt-4"></div>
                        <div class="mx-auto w-fit">
                            <CallToAction
                                link="/components/overview"
                                icon={{ type: "icon", name: "seti:html" }}
                                variant="primary"
                            >
                                View docs
                            </CallToAction>
                        </div>
                    </div>
                </div>
            </Card>
        </div>
    </div>

    <h2 class="text-center">Getting started is easy as</h2>
    <div class="pt-8"></div>
    <div class="not-content">
        <div class="grid grid-cols-[auto,auto] gap-8">
            <div class="flex flex-col items-end justify-start gap-2">
                <div
                    class="bg-accent h-10 w-10 rounded-full border-2 p-1 text-center font-mono text-xl"
                >
                    1
                </div>
                <div class="text-lg">Install the package</div>
            </div>
            <div class="max-w-xl">
                <NpmCommand
                    command={{ type: "install", package: "@niklasburggraaff/svelte-runia" }}
                />
            </div>
            <div class="flex flex-col items-end justify-start gap-2">
                <div
                    class="bg-accent h-10 w-10 rounded-full border-2 p-1 text-center font-mono text-xl"
                >
                    2
                </div>
                <div class="text-lg">Import and use a component</div>
            </div>
            <div class="max-w-xl">
                <Code
                    code={componentCode}
                    title="Component.svelte"
                    lang="svelte"
                    mark={componentMarks}
                />
            </div>
            <div class="flex flex-col items-end justify-start gap-2">
                <div
                    class="bg-accent h-10 w-10 rounded-full border-2 p-1 text-center font-mono text-xl"
                >
                    3
                </div>
                <div class="text-lg">Make it yours</div>
            </div>
            <div class="max-w-xl">
                <Code
                    code={componentStyledCode}
                    title="Component.svelte"
                    lang="svelte"
                    mark={componentStyledMarks}
                />
            </div>
        </div>
    </div>
</StarlightPage>
