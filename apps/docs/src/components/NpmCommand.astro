---
import { Code, TabItem, Tabs } from "@astrojs/starlight/components";

interface Props {
    command: {
        type: "install";
        package: string;
    };
}

const { command } = Astro.props;

const npmCommand =
    command.type === "install" ? `npm install ${command.package}` : "UNKONWN COMMAND";
const pnpmCommand = command.type === "install" ? `pnpm add ${command.package}` : "UNKONWN COMMAND";
const yarnCommand = command.type === "install" ? `yarn add ${command.package}` : "UNKONWN COMMAND";
---

<Tabs class="tabs">
    <TabItem label="npm" icon="seti:npm">
        <div class="-mt-4"><Code code={npmCommand} lang="sh" /></div>
    </TabItem>
    <TabItem label="pnpm" icon="pnpm">
        <div class="-mt-4"><Code code={pnpmCommand} lang="sh" /></div>
    </TabItem>
    <TabItem label="yarn" icon="seti:yarn">
        <div class="-mt-4"><Code code={yarnCommand} lang="sh" /></div>
    </TabItem>
</Tabs>
